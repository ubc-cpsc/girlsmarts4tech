{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  /**
   * true: allow override, false: disallow override
   * Include globals from p5.js/processing.js library
   * For docs, see: https://eslint.org/docs/user-guide/configuring#specifying-globals
   */
  "globals": {
    "setup": true,
    "draw": true,
    "createCanvas": true,
    "mouseIsPressed": false,
    "fill": true,
  },

  /**
   * 0: turned off, 1: warning, 2: error
   * Only issue a warning most of the time and exclude the formatting rules
   * For docs, see https://eslint.org/docs/rules/
   */
  "rules": {
    "for-direction": 1,
    "no-cond-assign": 1,
    "no-constant-condition": 0,
    "no-dupe-args": 1,
    "no-dupe-keys": 1,
    "no-duplicate-case": 1,
    "no-func-assign": 1,
    "no-template-curly-in-string": 0,
    "semi": 2,
    "no-unexpected-multiline": 1,
    "no-unsafe-negation": 1,
    "curly": 1,
    "eqeqeq": 1,
    "no-new-wrappers": 1,
    "no-return-assign": 1,
    "no-const-assign": 2,
    "no-var": 1
  }
}
